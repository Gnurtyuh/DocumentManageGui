<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.project.gui.controller.ApproveDocumentsController"
            prefWidth="850" prefHeight="900"
            stylesheets="@ApproveDocuments.css">

    <VBox alignment="TOP_CENTER"
          layoutX="25" layoutY="25"
          spacing="25"
          prefWidth="800"
          prefHeight="850">

        <!-- Tiêu đề -->
        <VBox alignment="CENTER" spacing="10">
            <Label text="— DUYỆT TÀI LIỆU —" styleClass="title"/>
            <Label text="Xác nhận hoặc từ chối tài liệu được gửi đến hệ thống"
                   styleClass="subtitle"/>
        </VBox>

        <!-- Thanh tìm kiếm -->
        <HBox alignment="CENTER" spacing="10">
            <TextField fx:id="searchField" promptText="🔍 Tìm kiếm theo tên tài liệu..." prefWidth="400"/>
            <Button text="Tìm kiếm" fx:id="btnSearch" styleClass="search-button"/>
            <Button text="Làm mới" fx:id="btnRefresh" styleClass="refresh-button"/>
        </HBox>

        <!-- Khu vực danh sách tài liệu -->
        <ScrollPane fitToWidth="true"
                    prefHeight="700"
                    styleClass="scroll-box">
            <content>
                <VBox fx:id="documentList"
                      spacing="20"
                      alignment="TOP_CENTER"
                      prefWidth="700"
                      styleClass="doc-list"/>
            </content>
        </ScrollPane>
    </VBox>
</AnchorPane>